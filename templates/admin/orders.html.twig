{% extends 'base.html.twig' %}

{% block title %}Admin Orders{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #E3FEF7;
            color: #003C43;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }
        .container {
            background-color: #135D66;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            max-width: 800px;
            width: 100%;
        }
        h1 {
            color: #E3FEF7;
            text-align: center;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #77B0AA;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #E3FEF7;
        }
        th {
            background-color: #003C43;
            color: #E3FEF7;
        }
        tr:hover {
            background-color: #E3FEF7;
        }
        a {
            color: #003C43;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
         .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 20px 20px;
            margin: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            color: white;
            font-size: 16px;
        }
         .btn-back {
            background-color: #003C43;
            position: absolute;
            top: 0;
            left: 0;}
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Admin Orders</h1>

    <a href="{{ path('app_home') }}" class="btn btn-back"><i class="fas fa-arrow-left"></i> Back to Home</a>

    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Status</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.user.username }}</td>
                <td>{{ order.status }}</td>
                <td>${{ order.total }}</td>
                <td>
                <a href="{{ path('admin_order_details', {'id': order.id}) }}">View Details</a>     
                         </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}