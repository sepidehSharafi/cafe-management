{% extends 'base.html.twig' %}

{% block title %}Add New Item to {{ menu.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #EAC7C7;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }
        h1 {
            color: #7B2869;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #9D3C72;
        }
        input[type="text"],
        input[type="number"],
        select,
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #C85C8E;
            border-radius: 5px;
            font-size: 16px;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
            transition: background-color 0.3s;
        }
        .btn-primary {
            background-color: #7B2869;
            color: white;
        }
        .btn-secondary {
            background-color: #9D3C72;
            color: white;
            margin-top: 10px;
        }
        .btn i {
            margin-right: 5px;
        }
        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }
        .alert-error {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }
        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }
        .form-error {
            color: #721c24;
            font-size: 0.9em;
            margin-top: 5px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1><i class="fas fa-plus-circle"></i> Add New Item to {{ menu.name }}</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {% for field in form %}
        <div class="form-group">
            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(field, {'attr': {'class': 'form-error'}}) }}
        </div>
    {% endfor %}
    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
    {{ form_end(form) }}

    <a href="{{ path('admin_menu') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
</div>
{% endblock %}