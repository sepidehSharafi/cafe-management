{% extends 'base.html.twig' %}

{% block title %}Order Confirmation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #630606;
            color: #fff;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: #890F0D;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        }
        h1 {
            color: #CF3333;
            margin-bottom: 20px;
        }
        p {
            margin-bottom: 15px;
        }
        strong {
            color: #CF3333;
        }
        .home-button {
            display: inline-block;
            background-color: #CF3333;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }
        .home-button:hover {
            background-color: #890F0D;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Order Confirmation</h1>
    <p>Thank you for your order!</p>
    <p>Your order ID is: <strong>{{ order.id }}</strong></p>
    <p>Status: <strong>{{ order.status }}</strong></p>
    <a href="{{ path('app_home') }}" class="home-button">Return to Home</a>
</div>
{% endblock %}