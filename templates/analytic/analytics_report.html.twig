{% extends 'base.html.twig' %}

{% block title %}Analytics Report{% endblock %}

{% block body %}
<div class="container">
    <h1>Analytics Report</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Order Count</th>
                <th>Total Sales</th>
            </tr>
        </thead>
        <tbody>
            {% for row in salesOverTime %}
                <tr>
                    <td>{{ row.date }}</td>
                    <td>{{ row.orderCount }}</td>
                    <td>{{ row.totalSales | number_format(2, '.', ',') }} $</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No data available for the selected date range.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_analytics') }}" class="btn btn-primary">Back to Analytics</a>
</div>
{% endblock %}